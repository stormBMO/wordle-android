<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".WordleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout"
    android:windowSoftInputMode="stateAlwaysVisible"
    android:layout_height="match_parent"
    android:layout_width="match_parent">



    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="4dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Not in word list"
        tools:alpha="1"/>

    <TextView
        android:id="@+id/wordle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wordle"
        android:textAlignment="center"
        android:textSize="48dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <LinearLayout
        android:id="@+id/first_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordle">

        <EditText
            android:id="@+id/first_row_1"
            style="@style/letters"
            android:background="@drawable/border"
            tools:text="A" />

        <EditText
            android:id="@+id/first_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/first_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/first_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/first_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_letters_row">

        <EditText
            android:id="@+id/second_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/second_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/second_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/second_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/second_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_letters_row">

        <EditText
            android:id="@+id/third_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/third_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/third_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/third_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/third_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_letters_row">

        <EditText
            android:id="@+id/fourth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/fourth_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/fourth_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/fourth_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/fourth_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fourth_letters_row">

        <EditText
            android:id="@+id/fifth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/fifth_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/fifth_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/fifth_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/fifth_row_5"
            style="@style/letters" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixth_letters_row"
        style="@style/letter_rows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifth_letters_row">

        <EditText
            android:id="@+id/sixth_row_1"
            style="@style/letters"
            android:background="@drawable/border" />

        <EditText
            android:id="@+id/sixth_row_2"
            style="@style/letters" />

        <EditText
            android:id="@+id/sixth_row_3"
            style="@style/letters" />

        <EditText
            android:id="@+id/sixth_row_4"
            style="@style/letters" />

        <EditText
            android:id="@+id/sixth_row_5"
            style="@style/letters" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>